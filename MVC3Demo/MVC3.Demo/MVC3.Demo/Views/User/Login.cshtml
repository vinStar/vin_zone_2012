@model MVC3.Demo.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>用户登陆</title>
</head>
<body>
    @using (Html.BeginForm())
    { 
        <div>
            用户名：
        </div>
        <div>
            @Html.TextBoxFor(x => x.UserName)
        </div>        
        <div>
            密码：
        </div>     
        <div>
            @Html.TextBoxFor(x => x.Password)
        </div>
        <div>
            <input type="submit" value="登录" />
        </div>
        @Html.ActionLink("链接首页", "Login")
    }
</body>
</html>
